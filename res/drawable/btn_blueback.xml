<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:centerX="0.5" android:centerY="0.5" android:endColor="#0865be" android:startColor="#032f6a" android:type="linear" />

            <corners android:radius="6dip" />

            <stroke android:width="1dp" android:color="#03479c" />

            <padding android:bottom="5dip" android:left="10dip" android:right="10dip" android:top="5dip" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <gradient android:angle="90" android:centerX="0.5" android:centerY="0.5" android:endColor="#0972d7" android:startColor="#033a83" android:type="linear" />

            <corners android:radius="1dip" />

            <stroke android:width="1dp" android:color="#03479c" />

            <padding android:bottom="5dip" android:left="10dip" android:right="10dip" android:top="5dip" />
        </shape></item>

</selector>